@{
    var links = new List<dynamic>();
    links.Add(new { Title = "Twitter", Url = "https://twitter.com/ameyergleaves", Icon = "fab fa-twitter" });
    links.Add(new { Title = "GitHub", Url = "https://github.com/alexmg", Icon = "fab fa-github" });
    links.Add(new { Title = "Keybase", Url = "https://keybase.io/alexmg", Icon = "fa fa-key" });
    links.Add(new { Title = "Stack Overflow", Url = "https://stackoverflow.com/users/335467/alex-meyer-gleaves", Icon = "fab fa-stack-overflow" });
    links.Add(new { Title = "LinkedIn", Url = "https://www.linkedin.com/in/alexmeyergleaves", Icon = "fab fa-linkedin" });
}

<div class="row justify-content-center">
    @foreach (var link in links)
    {
        <div class="col-xs mt-3">
            <a href="@link.Url" title="@link.Title" data-toggle="tooltip" data-animate="true" data-delay='{"show":"500", "hide":"0"}'>
                <span class="fa-stack fa-lg">
                    <i class="fa fa-circle fa-stack-2x"></i>
                    <i class="@link.Icon fa-stack-1x fa-inverse"></i>
                </span>
            </a>
        </div>
    }
</div>