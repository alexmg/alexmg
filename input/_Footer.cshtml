<footer>
    <div class="container">
        <div class="row">
                <div class="col-md-12 text-center">
                    @Html.Partial("_social-links")
                    <br />
                    <p class="copyright text-muted m-0">Copyright Â© @DateTime.Now.Year by @Document.GetString("SiteTitle")</p>
                    <br />
                    <ul class="list-inline text-center small">
                        @{
                            IDocument rssFeed = Outputs["**/*.rss"].FirstOrDefault();
                            IDocument atomFeed = Outputs["**/*.atom"].FirstOrDefault();
                        }
                        @if (rssFeed != null) {
                            <li class="list-inline-item">
                                <a href="@Context.GetLink(rssFeed)"><i class="fa fa-rss"></i> RSS Feed</a>
                            </li>
                        }
                        @if (atomFeed != null) {
                            <li class="list-inline-item">
                                <a href="@Context.GetLink(atomFeed)"><i class="fa fa-rss"></i> Atom Feed</a>
                            </li>
                        }
                    </ul>
                    <br />
                    <ul class="list-inline text-center small">
                        <i class="list-inline-item fab fa-github brand"></i><a href="https://github.com/alexmg/alexmg">This site on GitHub</a>
                    </ul>
                    <br />
                    <p class="copyright text-muted">
                        Generated by <a href="https://statiq.dev">Statiq</a> and hosted on <a href="https://www.netlify.com">Netlify</a>
                    </p>
                </div>
        </div>
    </div>
</footer>